<h1>Show Author</h1>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @author.name %>
  </li>

  <li>
    <strong>Sortable name:</strong>
    <%= @author.sortable_name %>
  </li>

  <li>
    <strong>Slug:</strong>
    <%= @author.slug %>
  </li>

  <li>
    <strong>Url:</strong>
    <%= @author.url %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.author_path(@conn, :edit, @author) %></span>
<span><%= link "Back", to: Routes.author_path(@conn, :index) %></span>
